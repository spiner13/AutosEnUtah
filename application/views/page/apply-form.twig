{% extends "global/template.twig" %}
{% block content %}
<div class="row justify-content-center mt-4">
    <div class="col-8">
        <form action="{{ base_url('/Apply/process') }}" method="POST">
            <legend>¿Que auto buscas?</legend>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="auto" id="inlineRadio1" value="auto" required>
                <label class="form-check-label" for="inlineRadio1">AUTO</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="auto" id="inlineRadio1" value="suv" required>
                <label class="form-check-label" for="inlineRadio1">SUV</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="auto" id="inlineRadio3" value="truck">
                <label class="form-check-label" for="inlineRadio3">TRUCK</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="auto" id="inlineRadio2" value="van">
                <label class="form-check-label" for="inlineRadio2">VAN</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="auto" id="inlineRadio3" value="auto">
                <label class="form-check-label" for="inlineRadio3">OTRO</label>
              </div>
            <legend class="mb-2 mt-4">Datos personales</legend>
            <div class="form-row">
                <div class="form-group col">
                    <label for="name" class="form-label">Nombre</label>
                    <input class="form-control" name="name" type="text" required>
                </div>
                <div class="form-group col">
                    <label for="lastanme">Apellido</label>
                    <input class="form-control" name="lastanme" type="text" required>
                </div>
            </div>
            <div class="form-group">
                <label for="email">Correo</label>
                <input class="form-control" name="email" type="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Teléfono</label>
                <input class="form-control" name="phone" type="phone" required>
            </div>
            <legend>Datos financieros</legend>
            <div class="form-group">
                <label for="down">¿Cuanto tienes de down?</label>
                <input class="form-control" name="down" type="number" step="0.1" min="1" required>
            </div>
            <div class="row">
                <div class="col text-center">
                    <div class="form-group mt-4 mb-4">
                        <div class="form-check col-8">
                          <input class="form-check-input" type="checkbox" id="gridCheck">
                          <label class="form-check-label" for="gridCheck">
                                Acepto que mis datos seran compartidos con las empresas/dealers aliados de <strong>AutosEnUtah</strong> para encontrar un auto que se ajuste a mis requerimientos.
                          </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" id="process" class="btn btn-block btn-success" value="Aplicar" disabled>
                </div>
                <div class="col">
                    <input type="reset" onclick="location.href='{{ base_url() }}'" class="btn btn-block btn-danger" value="Cancelar">
                </div>
            </div>
         
        </form>
    </div>
</div>
{% endblock  %}